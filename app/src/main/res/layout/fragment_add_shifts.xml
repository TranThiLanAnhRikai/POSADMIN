<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddShiftsFragment">
    <data>
        <variable
            name="addShiftsFragment"
            type="com.example.pos_admin.AddShiftsFragment" />
        <variable
            name="viewModel"
            type="com.example.pos_admin.model.ShiftViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/add_new_shift_text"
            android:text="ADD NEW SHIFT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="70dp"
            android:paddingLeft="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:id="@+id/new_shift_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/add_new_shift_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>