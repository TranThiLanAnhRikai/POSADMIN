<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddShiftsFragment">
    <data>
        <variable
            name="addMenuFragment"
            type="com.example.pos_admin.AddMenuFragment" />
        <variable
            name="menuViewModel"
            type="com.example.pos_admin.model.MenuViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/add_new_item_text"
            android:text="ADD NEW MENU ITEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="70dp"
            android:paddingLeft="100dp"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:id="@+id/new_item_info"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/add_new_item_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:background="@drawable/login_round_corner_drawable"
            android:layout_marginTop="40dp">
            <EditText
                android:id="@+id/name_edttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:hint="Item Name"
                android:text="@={menuViewModel.name}"/>
            <LinearLayout
                android:id="@+id/shift_pick_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/type_pick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_margin="10dp"
                    android:hint="Item Type"/>
            </LinearLayout>

            <EditText
                android:id="@+id/price_edttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:hint="Item Price"
                android:text="@{menuViewModel.price}"/>
            <LinearLayout
                android:id="@+id/img_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_add_photo_alternate_24"/>
                <TextView
                    android:id="@+id/add_img_text"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capture image here or browse"/>
            </LinearLayout>


        </LinearLayout>
            <Button
                android:id="@+id/add_new_shift_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> addMenuFragment.addNewItem()}"
                android:text="Add"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_item_info"
                android:textSize="30sp" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>