<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainMenuFragment">
    <data>
        <variable
            name="mainMenuFragment"
            type="com.example.pos_admin.MainMenuFragment" />
        <variable
            name="viewModel"
            type="com.example.pos_admin.model.PosAdminViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/current_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@{() -> viewModel.getCurrentDateTime()}"/>

        <LinearLayout
            android:id="@+id/today_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_datetime"
            android:background="@drawable/weather_info_background">

            <ImageView
                android:id="@+id/weather_image"
                android:layout_width="50dp"
                android:layout_height="50dp" />


            <TextView
                android:id="@+id/weather_info_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather Info" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Space for temperature" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/today_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/today_weather"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="100dp"
            android:background="@drawable/weather_info_background"
            >
            <TextView
                android:id="@+id/today_sale_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today Sale"/>
            <ImageView
                android:id="@+id/today_sale_graph"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <Button
                android:id="@+id/sales_analysis_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> mainMenuFragment.goToSalesAnalysisFragment()}"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/today_shifts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weather_info_background"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today_weather"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/today_shifts_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today Shifts" />
            <TextView
                android:id="@+id/morning_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Space for morning shift"/>
            <TextView
                android:id="@+id/afternoon_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Space for afternoon shift"/>
            <TextView
                android:id="@+id/noon_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Space for noon shift"/>

            <Button
                android:id="@+id/shifts_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shifts"
                android:onClick="@{() -> mainMenuFragment.goToShiftsFragment()}"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>