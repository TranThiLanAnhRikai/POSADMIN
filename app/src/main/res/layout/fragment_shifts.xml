<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ShiftsFragment">
    <data>
        <variable
            name="shiftViewModel"
            type="com.example.pos_admin.model.ShiftViewModel" />
        <variable
            name="shiftsFragment"
            type="com.example.pos_admin.ShiftsFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/shifts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="SHIFTS"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/shifts_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="PICK A DATE"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@+id/shifts_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <RadioGroup
            android:id="@+id/shifts_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/shifts_date">
            <RadioButton
                android:id="@+id/morning_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"/>
            <RadioButton
                android:id="@+id/afternoon_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afternoon"/>
            <RadioButton
                android:id="@+id/noon_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noon"/>
        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shifts"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/shifts_time" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:onClick="@{() -> shiftsFragment.goToNextScreen()}"
            android:text="Add New Shift"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shifts" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>